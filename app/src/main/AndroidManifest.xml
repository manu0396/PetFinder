<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.appadoskotlin2">

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_login_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_login_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppadosKotlin2">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppadosKotlin2.NoActionBar">
        </activity>
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            ></activity>
    </application>

</manifest>